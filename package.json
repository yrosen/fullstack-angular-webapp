{
  "name": "fullstack-ng",
  "version": "0.0.0",
  "scripts": {
    "start": "rm -rf dist && concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:server": "npm run build:shared && tsc-watch --project ./src/server --onSuccess \"nodemon ./dist/server/index.js\"",
    "start:client": "ng serve",
    "build": "rm -rf dist && npm-run-all build:*",
    "build:client": "ng build",
    "build:shared": "npm run db:generate && tsc --project ./src/shared --outDir ./dist",
    "build:server": "tsc --project ./src/server",
    "test": "jest",
    "test:client": "jest --config=./src/client/jest.config.ts",
    "test:server": "jest --config=./src/server/jest.config.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/forms": "^14.2.0",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "@prisma/client": "^4.6.1",
    "body-parser": "^1.20.1",
    "express": "^4.18.2",
    "prisma": "^4.6.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "^14.0.2",
    "@angular-devkit/build-angular": "^14.2.9",
    "@angular/cli": "~14.2.9",
    "@angular/compiler-cli": "^14.2.0",
    "@types/jasmine": "~4.0.0",
    "@types/jest": "^29.2.2",
    "@types/supertest": "^2.0.12",
    "concurrently": "^7.5.0",
    "jasmine-core": "~4.3.0",
    "jest": "^28.0.0",
    "jest-preset-angular": "^12.2.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.3.1",
    "ts-jest": "^28.0.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "~4.7.2"
  }
}
